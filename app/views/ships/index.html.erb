<h1>Boten</h1>

<table class="table">
  <tr>
    <th>Naam</th>
    <th>Ontwerp</th>
    <th colspan="3"></th>
  </tr>

  <% @ships.each do |ship| %>
      <tr>
        <td><%= ship.name %></td>
        <td><%= ship.design.name %></td>
        <td><%= link_to 'Show', ship_path(ship) %></td>
        <td><%= link_to 'Edit', edit_ship_path(ship) %></td>
        <td><%= link_to 'Destroy', ship_path(ship),
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>

<%= link_to 'Nieuwe Boot', new_ship_path %>