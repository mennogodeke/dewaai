<h1>Cursussen</h1>

<table class="table">
  <tr>
    <th>Cursus Type</th>
    <th>Begin Datum</th>
    <th>Vrije Plekken</th>
    <th colspan="3"></th>
  </tr>

  <% @courses.each do |course| %>
      <tr>
        <td><%= course.course_type.name %></td>
        <td><%= course.start_date %></td>
        <td><%= course.entries.count  %> / <%= course.course_type.design.capacity * course.course_type.ship_amount %></td>
        <td><%= link_to 'Show', course_path(course) %></td>
        <% if user_signed_in? %>
          <td>  <%= form_for @entry do |f| %>
                <%= f.hidden_field :course_id, :value => course.id %>
                <%= f.hidden_field :user_id, :value => current_user.id %>
                <%= f.submit 'Inschrijven!' %>
            <% end %>
          </td>
        <% else %>
          <td><%= link_to 'Inschrijven!', new_user_registration_path, message: 'Log in om je in te schrijven.' %></td>
        <% end %>
        <% if can? :manage, :all  %>
          <td><%= link_to 'Edit', edit_course_path(course) %></td>
          <td><%= link_to 'Destroy', course_path(course),
                          method: :delete,
                          data: { confirm: 'Are you sure?' } %></td>
        <% end  %>
      </tr>
  <% end %>
</table>
<% if can? :manage, :all  %>
    <h1>Opbrengsten</h1>
  <table class="table">
    <thead>
    <tr>
      <td>Cursus</td>
      <td>Begindatum</td>
      <td>Einddatum</td>
      <td>Prijs</td>
      <td>Aantal Cursisten</td>
      <td>Opbrengsten</td>
    </tr>
    </thead>
    <tbody>
    <% @courses.each do |c| %>
      <tr>
        <td><%= c.course_type.name %></td>
        <td><%= c.start_date %></td>
        <td><%= c.start_date %></td>
        <td><%= number_to_currency(c.course_type.price, unit: "€") %></td>
        <td><%= c.entries.count %></td>
        <td><%= number_to_currency(c.course_type.price * c.entries.count, unit: "€") %></td>
      </tr>
    <% end %>
      <tr>
        <td colspan="4"></td>
        <td>Totaal:</td>
        <td><%= number_to_currency(@total, unit: "€") %></td>
      </tr>
    </tbody>
  </table>

  <%= link_to 'Nieuwe Cursus', new_course_path %>
<% end %>